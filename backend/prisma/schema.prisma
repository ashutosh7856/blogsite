model Blogs{
  id Int @id @default(autoincrement())
  title String
  content String
  createrid Int
  createdat DateTime @default(now())
  link Link[]
  user User @relation(fields: [createrid], references: [id])
}
model Link{
  id Int @id @default(autoincrement())
  link String @unique
  content Int
  blogs Blogs @relation(fields: [content], references: [id])
}
